// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Laravel",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "laravel.test",
  "workspaceFolder": "/var/www/html",
  // Set *default* container specific settings.json values on container create.
  "settings": {},
  // Add the IDs of extensions you want installed when the container is created.
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "ryannaddy.laravel-artisan",
        "bmewburn.vscode-intelephense-client",
        "MehediDracula.php-namespace-resolver",
        "amiralizadeh9480.laravel-extra-intellisense",
        "onecentlin.laravel5-snippets",
        "stef-k.laravel-goto-controller",
        "codingyu.laravel-goto-view",
        "onecentlin.laravel-blade",
        "austenc.laravel-blade-spacer",
        "mikestead.dotenv",
        "christian-kohler.path-intellisense",
        "esbenp.prettier-vscode",
        "CoenraadS.bracket-pair-colorizer",
        "damms005.devdb"
      ]
    }
  },
  // For use with PHP or Apache (e.g.php -S localhost:8080 or apache2ctl start)
  "forwardPorts": [80],
  "postCreateCommand": "chown -R 1000:1000 /var/www/html && composer install && php artisan key:generate && echo \"ASSET_URL=https://${CODESPACE_NAME}-80.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}\" >> .env",
  "remoteUser": "sail"
}
// DevContainer Reference: https://code.visualstudio.com/docs/remote/devcontainerjson-reference
